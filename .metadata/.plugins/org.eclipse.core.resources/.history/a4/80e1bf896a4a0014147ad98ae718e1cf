package com.mten.solo;

public class Person {
	//fields
	private String name;
	private int maxBooksAllowed;
	
	//constructors
	
	public Person() {
		name = "unknown name";
		maxBooksAllowed = 3;
	}
	
	//methods
	
	//getter for name
	public String name() {
		return name;
	}
	//setter for name
	public void name(String anyName) {
		name = anyName;
	}
}

